<%= render 'home/navbar'%>
<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow-lg mb-5 bg-white rounded">
          <div class="card-header font-italic">
            By Admin
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success"%></h5>
            <p class="card-text"><%= truncate(article.description , length: 30) %></p>
            <a <%= link_to 'View', article_path(article), class: "btn btn-outline-success"%></a>
              <%# <a href="#" class="btn btn-outline-success">View</a> %>
              <a <%= link_to 'Edit', edit_article_path(article), method: :edit , class: "btn btn-outline-info" %> </a>
                <%# <a href="" class="btn btn-outline-info">Edit</a> %>
                <a <%= link_to 'Delete',article_path(article), method: :delete, form: { data: { turbo_confirm: "Are you sure?"}}, class: "btn btn-outline-danger" %></a>
                  <%# <a href="#" class="btn btn-outline-danger">Delete</a> %>
                </div>
                <div class="card-footer text-muted">
                  <small>Created <%= time_ago_in_words(article.created_at) %> ago,
                    edited <%=  time_ago_in_words(article.updated_at) %> ago</small>
                </div>
              </div>
            </div>
          </div>
        <%end%>
      </div>
      <div class="text-center mb-2">
        <a <%= link_to "Create New Article", new_article_path , class: "btn btn-outline-success" %></a>
      </div>
      
      <%= render 'home/footer'%>
